            <TextBox x:Name="PasTxtPovtor" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="15" Margin="0,5,0,5"/>
        </Border>
        <Border HorizontalAlignment="Left" Height="32" Margin="599,290,0,0" VerticalAlignment="Top" Width="164">
            <TextBox x:Name="PasTxt" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="15" Margin="0,5,0,5"/>
        </Border>
        <Border HorizontalAlignment="Left" Height="70" Margin="466,215,0,0" VerticalAlignment="Top" Width="297">
