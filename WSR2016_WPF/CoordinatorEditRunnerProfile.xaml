            <StackPanel>
                <Label x:Name="EmailLbl" Content="the.emaul@address.com" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="12" Foreground="Gray"/>
                <TextBox x:Name="NameTxt" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="15" Margin="5,5,44.4,5"/>
                <TextBox x:Name="SurNameTxt" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="15" Margin="5,5,44.4,5"/>
